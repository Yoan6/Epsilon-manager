<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" prefHeight="470.0" prefWidth="900.0"
      styleClass="mainContainer" stylesheets="@main.css" xmlns="http://javafx.com/javafx/11.0.14-internal">
   <children>
      <Label text="Epsilon Manager" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets/>
         </BorderPane.margin>
         <font>
            <Font name="Noto Looped Thai Bold" size="26.0"/>
         </font>
      </Label>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" onAction="#newProjetAction" prefHeight="60.0" prefWidth="300.0"
                    text="Créer nouveau projet" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="30.0"/>
               </HBox.margin>
            </Button>
            <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS"/>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#openProjetAction"
                    prefHeight="60.0" prefWidth="300.0" text="Ouvrir projet" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="30.0"/>
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets left="20.0" right="20.0" top="100.0"/>
         </VBox.margin>
      </HBox>
      <Button mnemonicParsing="false" onAction="#onAideAction" prefHeight="60.0" prefWidth="300.0"
              text="Informations supplémentaires" textAlignment="CENTER">
         <VBox.margin>
            <Insets top="100.0"/>
         </VBox.margin>
      </Button>
   </children>
</VBox>
